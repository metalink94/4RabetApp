<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.app.a4rabetapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".app.FourRabetApp"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/NoActionBar">

        <activity android:name=".base.BaseActivity" />
        <activity
            android:name=".screens.menu.MenuActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screens.web.WebActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".screens.about.AboutActivity"
            android:label=""
            android:screenOrientation="portrait" />
        <activity
            android:name=".screens.results.ResultsActivity"
            android:label=""
            android:screenOrientation="portrait" />
    </application>
</manifest>
