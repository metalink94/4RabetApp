<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_color"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:src="@drawable/logo3"
            />
    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/spacing_very_large_24"
                android:text="@string/about"
                android:textColor="@android:color/white"
                android:textSize="32dp"
                />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_very_large_24"
                android:layout_marginRight="@dimen/spacing_very_large_24"
                android:gravity="center"
                android:text="@string/about_app"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_big"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_very_large_24"
                android:layout_marginRight="@dimen/spacing_very_large_24"
                android:layout_marginTop="@dimen/spacing_normal_16"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/telegram"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="@string/telegram_title"
                        android:textColor="@color/toolbar_color"
                        android:textSize="@dimen/text_size_normal"
                        />

                    <TextView
                        android:id="@+id/telegramUrl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="@dimen/spacing_smallest_8"
                        android:paddingTop="@dimen/spacing_smallest_8"
                        android:text="@string/telegram_url"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/whats_app"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/whats_app"
                        android:textColor="@color/toolbar_color"
                        android:textSize="@dimen/text_size_normal"
                        />

                    <TextView
                        android:id="@+id/whatsUrl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/spacing_smallest_8"
                        android:paddingTop="@dimen/spacing_smallest_8"
                        android:text="@string/whats_url"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/mail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/mail"
                        android:textColor="@color/toolbar_color"
                        android:textSize="@dimen/text_size_normal"
                        />

                    <TextView
                        android:id="@+id/mailUrl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/spacing_smallest_8"
                        android:paddingTop="@dimen/spacing_smallest_8"
                        android:text="@string/mail_url"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
